---
import Card from './Card.astro';
import programs from '../data/programs.json'
---

<section id="Programas">
  <h2>Lista de programas de paga completamente gratis</h2>
  <div class="grid">
    <Card data={programs}/>
  </div>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: auto;
    min-height: 100vh;
    background-color: #1d1d1d;
    padding-top: 7.6rem;
  }
  h2 {
    color: #fff;
    max-width: 800px;
    width: 90%;
    font-size:2.6rem;
    line-height: 1.2;
    margin: 2rem auto;
    text-align: center;
    font-weight: 400;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    grid-gap: 1rem;
    justify-items: center;
    align-items: center;
    width: 90%;
    max-width: 800px;
    margin: 2rem auto;
  }

</style>

