	};
	document.write('<scr' + 'ipt type="text/javascript" src="http' + (location.protocol === 'https:' ? 's' : '') + '://resetselected.com/63a0a7d29b28a69ba2b0c4caf5d2dbe8/invoke.js"></scr' + 'ipt>');
