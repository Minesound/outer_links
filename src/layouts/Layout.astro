---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		 <link rel="icon" type="image/svg+xml" href="16x16.svg" sizes="16x16"/>
    <link rel="icon" type="image/svg+xml" href="32x32.svg" sizes="32x32"/>
    <link rel="icon" type="image/svg+xml" href="96x96.svg" sizes="96x96"/>
    <link rel="apple-touch-icon" type="image/svg+xml" href="180x180.svg" sizes="180x180" >
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Primary Meta Tags -->
		<meta name="title" content="Programas Premium Totalmente Gratis">
		<meta name="description"
			content="Pagína web donde encontrarás programas que son de paga totálmente gratis y libre de virus.">

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website">
		<meta property="og:url" content="https://metatags.io/">
		<meta property="og:title" content="Programas Premium Totalmente Gratis">
		<meta property="og:description"
			content="Pagína web donde encontrarás programas que son de paga totálmente gratis y libre de virus.">
		<meta property="og:image"
			content="https://metatags.io/assets/meta-tags-16a33a6a8531e519cc0936fbba0ad904e52d35f34a46c97a2c9f6f7dd7d336f2.png">

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image">
		<meta property="twitter:url" content="https://metatags.io/">
		<meta property="twitter:title" content="Programas Premium Totalmente Gratis">
		<meta property="twitter:description"
			content="Pagína web donde encontrarás programas que son de paga totálmente gratis y libre de virus.">
		<meta property="twitter:image"
			content="https://metatags.io/assets/meta-tags-16a33a6a8531e519cc0936fbba0ad904e52d35f34a46c97a2c9f6f7dd7d336f2.png">
	</head>
	<body>
		<slot />
		<script type="module" src="src/helpers/index.js"></script>
	</body>
</html>
<style>
:global(html) {
	box-sizing: border-box;
	font-size: 62.5%;
	scroll-behavior: smooth;
	font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

:global(*), :global(*):before, :global(*):after {
	box-sizing: inherit;
}

:global(body) {
	font-size: 1.6rem;
	background-color: #1d1d1d;
	margin: 0 auto;
	padding: 0;
}

:global(a) {
	text-decoration: none;
}

</style>
